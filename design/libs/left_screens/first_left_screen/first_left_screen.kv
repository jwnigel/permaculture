#:import TabbedPanelItem libs.components.tabbed_panel_item
#:import MyChip libs.components.my_chip
#:import MyCheckbox	libs.components.my_checkbox
#:import MonthsDropDownItem libs.left_screens.first_left_screen


 # Defining dropdown Menu
<RightContentCls>
    disabled: True
    adaptive_size: True
    pos_hint: {"center_y": .5}

    MDIconButton:
        icon: root.icon
        user_font_size: "16sp"
        md_bg_color_disabled: 0, 0, 0, 0

    MDLabel:
        text: root.text
        font_style: "Caption"
        adaptive_size: True
        pos_hint: {"center_y": .5}

<Item>
    IconLeftWidget:
        icon: root.left_icon

    RightContentCls:
        id: container
        icon: root.right_icon
        text: root.right_text

<MonthsDropDownItem>
    background_color: 'white'
    size_hint: None, None
    pos_hint: {'center_x': .5, 'center_y': .5}

# Start creating UI
<FirstLeftScreen@TabbedPanelItem>:
    id: filters_tab
    text: 'Filters'

    MDBoxLayout:
        orientation: 'vertical'
        padding: '42dp'
        spacing: '30dp'
        md_bg_color: (199/255, 177/255, 152/255, 1)

        MDBoxLayout:
            id: hardiness_zones_container
            orientation: 'vertical'
            spacing: '20dp'
            Button:
                id: submit_filters
                text: 'Submit Filters'
                on_release: app.root.ids.main_display.ids.db_screen.refresh(filters=app.all_filters)
            Label:
                text: 'Hardiness Zone'
                font_size: '28dp'
            MDBoxLayout:
                MDSlider:
                    id: hardiness_zone_slider
                    min: 2
                    max: 13
                    step: 1
                    hint: False
					on_value:app.process_slider('hardiness_zone', *args)
                Label:
                    size_hint: (.2, 1)
                    text: str(hardiness_zone_slider.value)
                    font_size: '24dp'

        MDBoxLayout:
            id: growth_rate_box
            orientation: 'vertical'
            Label:
                text: 'Growth Rate'
                font_size: '28dp'

            MDGridLayout:
                id: growth_rate_checks
				rows: 1
                padding: '5dp'
                spacing: '5dp'
				Label:
					text: 'Slow'
                MyCheckbox:
                    id: slow
					on_active: app.process_checkbox(self,self.state,'slow', 'growth_rate')
				Label:
					text: 'Medium'
                MyCheckbox:
                    id: medium
					on_active:app.process_checkbox(self,self.state,'medium', 'growth_rate')
				Label:
					text: 'Fast'
                MyCheckbox:
                    id: fast
					on_active:app.process_checkbox(self,self.state,'fast', 'growth_rate')

        MDSeparator:
        MDBoxLayout:
            id: form_box
            orientation: 'vertical'
            Label:
                text: 'Plant Form'
                font_size: '28dp'

            MDGridLayout:
                id: form_checks
				rows: 2
                padding: '10dp'
                spacing: '5dp'

                # Need to investigate what pfaf means by perennial. 
                # Is it an herb with non-woody stem that dies back? 
                # If not, what differentiates it from a shrub?
				Label:
					text: 'Perennial'
                MyCheckbox:
                    id: herb
					on_active: app.process_checkbox(self,self.state,'Perennial', 'form')
				Label:
					text: 'Shrub'
                MyCheckbox:
                    id: shrub
					on_active:app.process_checkbox(self,self.state,'Shrub', 'form')
				Label:
					text: 'Tree'
                MyCheckbox:
                    id: tree
					on_active:app.process_checkbox(self,self.state,'Tree', 'form')
				Label:
					text: 'Bamboo'
                MyCheckbox:
                    id: bamboo
					on_active:app.process_checkbox(self,self.state,'Bamboo', 'form')
                Label:
                    text: 'Bulb'
                MyCheckbox:
                    id: bulb
					on_active:app.process_checkbox(self,self.state,'Bulb', 'form')
                Label:
                    text: 'Climber'
                MyCheckbox:
                    id: climber
					on_active:app.process_checkbox(self,self.state,'Climber', 'form')
                Label:
                    text: 'Fern'
                MyCheckbox:
                    id: fern
					on_active:app.process_checkbox(self,self.state,'Fern', 'form')
                Label:
                    text: 'Annual'
                MyCheckbox:
                    id: fern
					on_active:app.process_checkbox(self,self.state,'Annual', 'form') 

        MDBoxLayout:
            id: holds_leaf
            orientation: 'vertical'
            Label:
                text: 'Foliage'
                font_size: '28dp'
            MDGridLayout:
                id: foliage_rb
                rows: 1
                Label:
					text: 'Deciduous'
                MyCheckbox:
                    id: deciduous
                    group: 'foliage'
					on_active: app.process_rb(self,self.state,'Deciduous', 'foliage')
				Label:
					text: 'Evergreen'
                MyCheckbox:
                    id: evergreen
                    group: 'foliage'
					on_active:app.process_rb(self,self.state,'Evergreen', 'foliage')
				Label:
					text: 'Any'
                MyCheckbox:
                    id: any_foliage
                    group: 'foliage'
					on_active:app.process_rb(self,self.state,'Any', 'foliage')


        MDSeparator:
        MDBoxLayout:
            id: pollinator_box
            orientation: 'vertical'
            Label:
                text: 'Pollinators'
                font_size: '28dp'

            MDGridLayout:
                id: form_checks
				rows: 3
				Label:
					text: 'Bees'
                MyCheckbox:
                    id: bees
					on_active: app.process_checkbox(self,self.state,'Bees', 'pollinators')
				Label:
					text: 'Flies'
                MyCheckbox:
                    id: flies
					on_active:app.process_checkbox(self,self.state,'Flies', 'pollinators')
				Label:
					text: 'Insects'
                MyCheckbox:
                    id: insects
					on_active:app.process_checkbox(self,self.state,'Insects', 'pollinators')
				Label:
					text: 'Lepidoptera'
                MyCheckbox:
                    id: lepidoptera
					on_active:app.process_checkbox(self,self.state,'Lepidoptera', 'pollinators')
				Label:
					text: 'Wind'
                MyCheckbox:
                    id: wind
					on_active:app.process_checkbox(self,self.state,'Wind', 'pollinators')
				Label:
					text: 'Beetles'
                MyCheckbox:
                    id: beetles
					on_active:app.process_checkbox(self,self.state,'Beetles', 'pollinators')

        MDSeparator:
        MDBoxLayout:
            Label:
                text: 'Flower Month: '
                font_size: '24sp'
            MonthsDropDownItem:
                id: flower_month_dropitem
                text: 'Any'
                font_size: '20dp'
                on_release: self.menu.open()
        MDBoxLayout:
            Label:
                text: 'Nectary Value: '
                font_size: '24sp'
            # MyDropDownItem:
            #     id: flower_month_dropitem
            #     text: 'Any'
            #     font_size: '20dp'
            #     on_release: self.menu.open()
